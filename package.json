{
  "name": "sample-voting",
  "version": "0.0.1",
  "description": "A sample voting system",
  "main": "server/server.js",
  "scripts": {
    "setup": "bash scripts/development/setup.sh && node scripts/development/validateSetup.js",
    "start": "yarn setup && nodemon --exec 'node -r dotenv/config' server/server -- dotenv_config_path=dev.env",
    "debug": "NODE_ENV=development node -r dotenv/config dotenv_config_path=dev.env --inspect-brk server/server",
    "test:server": "NODE_ENV=test jest",
    "test": "yarn lint && yarn test:server",
    "lint": "eslint --ext .js .",
    "prettify": "prettier --write \"**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Duncan00/simple-voting"
  },
  "engines": {
    "node": ">= 10.15.0"
  },
  "author": "Duncan00",
  "license": "MIT",
  "lint-staged": {
    "*.{js,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    }
  },
  "dependencies": {
    "axios": "^0.19.0",
    "config": "^3.2.2",
    "http-status-codes": "^1.3.2",
    "ioredis": "^4.14.1",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-response-time": "^2.1.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "swagger-ajv": "^3.0.0",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@koa/cors": "^3.0.0",
    "commitlint-config-gitmoji": "^1.0.1",
    "cz-emoji": "^1.1.2",
    "dotenv": "^8.1.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "husky": "^3.0.5",
    "ioredis-mock": "^4.16.3",
    "jest": "^24.9.0",
    "jest-watch-typeahead": "^0.4.0",
    "lint-staged": "^9.3.0",
    "mockdate": "^2.0.5",
    "nock": "^11.3.5",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2"
  }
}
